CREATE TABLE events
(
    event_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    author_id INT NOT NULL,
    photo_loc VARCHAR(255) NOT NULL,
    description LONGTEXT NOT NULL,
    title VARCHAR(255) NOT NULL,
    location LONGTEXT NOT NULL,
    date_time DATETIME NOT NULL
);
CREATE TABLE group_event
(
    group_id INT NOT NULL,
    event_id INT NOT NULL
);
CREATE TABLE groups
(
    group_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    description LONGTEXT NOT NULL,
    title VARCHAR(255) NOT NULL
);
CREATE TABLE users
(
    user_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    admin INT NOT NULL,
    valid INT NOT NULL,
    first_name VARCHAR(35) NOT NULL,
    last_name VARCHAR(35) NOT NULL
);
ALTER TABLE events ADD FOREIGN KEY (author_id) REFERENCES users (user_id);
ALTER TABLE group_event ADD FOREIGN KEY (group_id) REFERENCES groups (group_id);
ALTER TABLE group_event ADD FOREIGN KEY (event_id) REFERENCES events (event_id);
CREATE UNIQUE INDEX unique_email ON users (email);
